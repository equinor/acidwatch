{
    "build": {
        "dockerfile": "DockerFile"
    },
    "forwardPorts": [8000, 8001, 5173],
  "portsAttributes": {
    "5173": {
      "label": "Frontend",
      "onAutoForward": "openBrowser"
    },
    "8001": {
      "label": "Backend",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "ARCS",
      "onAutoForward": "notify"
    }
  },
    "postCreateCommand" : "bash -i .devcontainer/install-dependencies.sh"
}
